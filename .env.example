# AI Executive Agent - Environment Configuration
# Copy this file to .env and fill in with your actual values

# ============================================
# Google Gemini API Configuration
# ============================================
# Get your free API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_gemini_api_key_here
GEMINI_MODEL=gemini-pro
GEMINI_TIMEOUT=30

# ============================================
# Comet ML Configuration
# ============================================
# Sign up for free at: https://www.comet.ml/
COMET_API_KEY=your_comet_ml_api_key_here
COMET_WORKSPACE=your_workspace_name
COMET_PROJECT_NAME=ai-executive-agent
COMET_DISABLED=False

# ============================================
# Opik Configuration (LLM Monitoring)
# ============================================
# Create account at: https://www.comet.ml/opik
OPIK_API_KEY=your_opik_api_key_here
OPIK_BASE_URL=https://api.opik.comet.ml
OPIK_ENABLED=False

# ============================================
# Browser-Use Configuration
# ============================================
# Auto-configured for Playwright
BROWSER_TYPE=chromium
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30000
BROWSER_MAX_CONCURRENT=3

# ============================================
# ChromaDB Configuration
# ============================================
CHROMADB_PATH=./data/chroma
CHROMADB_HOST=localhost
CHROMADB_PORT=8000
CHROMADB_COLLECTION_PREFIX=agent_

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/agent.log

# ============================================
# Agent Execution Configuration
# ============================================
AGENT_MAX_ITERATIONS=10
AGENT_TIMEOUT=300
AGENT_MEMORY_SIZE=1000
AGENT_VECTOR_SIZE=768

# ============================================
# CrewAI Configuration
# ============================================
CREW_VERBOSE=true
CREW_MEMORY_ENABLED=true
CREW_CACHE_ENABLED=true

# ============================================
# LangGraph Configuration
# ============================================
LANG_GRAPH_DEBUG=false
LANG_GRAPH_MAX_DEPTH=20
LANG_GRAPH_TIMEOUT=60

# ============================================
# Web Search Configuration (Optional)
# ============================================
SERPAPI_API_KEY=optional_serp_api_key
BRAVE_SEARCH_API_KEY=optional_brave_api_key

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=sqlite:///./data/agent.db
DATABASE_ECHO=false

# ============================================
# Server Configuration
# ============================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_WORKERS=4
SERVER_DEBUG=false

# ============================================
# Security Configuration
# ============================================
SECRET_KEY=your_secret_key_for_production
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=*

# ============================================
# Cache Configuration
# ============================================
CACHE_BACKEND=memory
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# ============================================
# Proxy Configuration (Optional)
# ============================================
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1

# ============================================
# Feature Flags
# ============================================
FEATURE_BROWSER_USE=true
FEATURE_WEB_SEARCH=true
FEATURE_DATA_ANALYSIS=true
FEATURE_MEMORY_PERSISTENCE=true
FEATURE_MONITORING=true
